  <script>
    const backgrounds: string[] = [
  'aurora-sky',
  'second-image'  // Replace with a class name for your second image
];

let currentIndex = 0;

function changeBackground() {
  const backElement = document.querySelector('.back');
  
  if (!backElement) {
    console.error("Couldn't find element with class 'back'");
    return;
  }

  // Remove all background classes
  backgrounds.forEach(bg => backElement.classList.remove(bg));

  // Add the next background class
  currentIndex = (currentIndex + 1) % backgrounds.length;
      let back = backgrounds[currentIndex] ?? '';
  backElement.classList.add(back);

  console.log(`Changed background to: ${backgrounds[currentIndex]}`);
}

// Initial setup
const backElement = document.querySelector('.back');
if (backElement) {
  // Set initial background
      let back = backgrounds[currentIndex] ?? '';
  backElement.classList.add(back);
  
  // Change background every 5 seconds
  const intervalId = setInterval(changeBackground, 5000);

  // Optional: Stop the interval if the page is hidden to save resources
  document.addEventListener('visibilitychange', () => {
    if (document.hidden) {
      clearInterval(intervalId);
    } else {
      setInterval(changeBackground, 5000);
    }
  });
} else {
